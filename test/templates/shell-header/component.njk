{% macro header(properties={ }, modifier={}, state={}, aria={}) -%}
{%- set _id = utils.id() %}
<div class="fd-shell-header">

{{- caller() | indent -}}

</div>
{%- endmacro %}

{%- macro header_group(properties={}, modifier=[], aria={}, classes=[]) %}
<section class="fd-shell-header__group{{ classes | classes }}{{ modifier | modifier("shell-header__group") }}"{{aria | aria}}>
  {% if modifier === "begin" %}
    <div class="fd-shell-header__logo">
//logo
    </div>
  {% endif %}
    {{- caller() | indent -}}
    {% if modifier === "end" and properties.product_switcher === true %}
      <div class="fd-shell-header__product-switcher">
{{ product_switcher() }}
      </div>
    {% endif %}

</section>
{%- endmacro %}
